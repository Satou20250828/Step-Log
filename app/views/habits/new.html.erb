<div class="mx-auto mt-10 max-w-md rounded-2xl border border-gray-100 bg-white p-6 shadow-sm">
  <h1 class="mb-6 text-xl font-bold text-slate-900">習慣を登録する</h1>
  <%= form_with model: @habit, url: habit_path, local: true, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :name, "何を習慣にしますか？", class: "mb-2 block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, placeholder: "例: 毎日5分読書する", class: "w-full rounded-lg border-gray-300 bg-white text-slate-900 placeholder:text-slate-400 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
    <%= f.submit "登録する", class: "w-full bg-blue-600 text-white py-3 rounded-lg font-bold hover:bg-blue-700 transition" %>
    <%= link_to "戻る", root_path, class: "mt-4 block text-center text-sm text-gray-500 hover:underline" %>
  <% end %>
</div>
