<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-2xl shadow-sm border border-gray-100">
  <h1 class="text-xl font-bold mb-6">習慣を登録する</h1>
  <%= form_with model: @habit, url: habit_path, local: true, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :name, "何を習慣にしますか？", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, placeholder: "例: 毎日5分読書する", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <%= f.submit "登録する", class: "w-full bg-blue-600 text-white py-3 rounded-lg font-bold hover:bg-blue-700 transition" %>
    <%= link_to "戻る", root_path, class: "block text-center text-gray-400 text-sm mt-4 hover:underline" %>
  <% end %>
</div>
